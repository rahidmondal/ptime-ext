{
    "manifest_version": 3,
    "name": "Ptime Extension",
    "description": "Simple Timer Extension",
    "version": "0.4.0",
    "action": {
        "default_popup": "src/index.html",
        "default_icon": {
            "16": "src/resource/logo16.png",
            "48": "src/resource/logo48.png",
            "128": "src/resource/logo128.png"
        }
    },
    "background": {
        "service_worker": "src/background.js"
    },
    "permissions": [
        "storage",
        "windows",
        "alarms"
    ],
    "icons": {
        "16": "src/resource/logo16.png",
        "48": "src/resource/logo48.png",
        "128": "src/resource/logo128.png"
    }
}